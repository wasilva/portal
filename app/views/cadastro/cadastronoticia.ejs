<!DOCTYPE HTML>
<html lang="pt-br">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>WASINFO System</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="manifest" href="site.webmanifest">
  <link rel="apple-touch-icon" href="icon.png">

  <!-- bootstrap - link cdn -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
    crossorigin="anonymous">

  <!-- favicon -->
  <link rel="shortcut icon" href="images/favicon.ico" />
</head>

<body>

  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <a href="/portalnoticias">
          <img src="/images/logo.png" />
        </a>
      </div>
    </div>
  </nav>


  <div class="container">

    <% if(validacao.length > 0){ %>
      <div class="row">
        <div class="col-md-12">
          <div class="alert alert-danger">
            <strong>Atenção!</strong>
            <ul>
              <% for(var i = 0; i < validacao.length; i++){ %>
                <li>
                  <%= validacao[i].msg %>
                </li>
                <% } %>
            </ul>
          </div>
        </div>
      </div>
      <% } %>

        <div class="row">
          <div class="col-md-12">
            <form action="/noticias/salvar" method="POST">
              <div class="form-group">
                <label for="titulo">Título:</label>
                <input type="text" value="<%=noticia.titulo%>" class="form-control" id="titulo" placeholder="Informe o titulo da notícia"
                  name="titulo">
              </div>

              <div class="form-group">
                <label for="pwd">Resumo:</label>
                <input type="text" value="<%=noticia.resumo%>" class="form-control" id="resumo" placeholder="Informe o resumo da notícia"
                  name="resumo">
              </div>

              <div class="form-group">
                <label for="pwd">Autor:</label>
                <input type="text" value="<%=noticia.autor%>" class="form-control" id="autor" placeholder="Informe o autor" name="autor">
              </div>

              <div class="form-group">
                <label for="pwd">Data:</label>
                <input type="date" class="form-control" id="data_noticia" name="data_noticia">
              </div>

              <div class="form-group">
                <label for="pwd">Notícia:</label>
                <textarea class="form-control" id="noticia" placeholder="Informe a notícia" name="noticia"></textarea>
              </div>

              <button type="submit" class="btn btn-default">Cadastrar</button>

            </form>

          </div>
        </div>
  </div>

</body>

</html>