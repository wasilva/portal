<!DOCTYPE HTML>
<html lang="pt-br">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>WASINFO System</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="manifest" href="site.webmanifest">
  <link rel="apple-touch-icon" href="icon.png">

  <!-- JQuery -->
  <script src="js/jquery-2.2.1.js"></script>

  <!-- bootstrap - link cdn -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
    crossorigin="anonymous">

  <!-- favicon -->
  <link rel="shortcut icon" href="images/favicon.ico" />
</head>

<body>

  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <a href="/">
          <img src="/images/logo.png" />
        </a>
      </div>
  </nav>

  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <form class="form-cadastro" action="/enviarcontato" method="post">
          <div class="form-group">
            <label>
              <b>Nome</b>
            </label>
            <input type="text" class="form-control" placeholder="Informe o nome" name="nome">
          </div>

          <div class="form-group">
            <label>
              <b>E-mail</b>
            </label>
            <input type="text" class="form-control" placeholder="Informe o e-mail" name="email">
          </div>

          <div class="form-group">
            <label>
              <b>Telefone</b>
            </label>
            <input type="text" class="form-control" placeholder="Informe o telefone" name="telefone">
          </div>

          <div class="form-group">
            <label>
              <b>Motivo do contato</b>
            </label>

            <select class="form-control" name="motivo">
              <option value="Administrador">Elogio</option>
              <option value="Consulta">Reclamação</option>
              <option value="Moderador">Sugestão</option>
            </select>
          </div>

          <div class="form-group">
            <label>
              <b>Descrição</b>
            </label>
            <textarea class="form-control" placeholder="Informe a descrição" name="descricao"></textarea>
          </div>

          <button type="submit" class="btn btn-default">Enviar</button>

        </form>

      </div>
    </div>
  </div>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
    crossorigin="anonymous"></script>

</body>

</html>